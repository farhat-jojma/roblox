---
import Layout from "../../layouts/Layout.astro";
import { getLangStaticPaths, resolveLang } from "../../lib/i18n";
import HtmlContent from "../../components/HtmlContent.astro";
import Footer from "../../components/Footer.astro";
export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../../locales/${locale}.json`).then((m) => m.default);
---

<Layout lang={locale} title={dict.termsTitle}>
  <!-- Roblox Terms Hero Section -->
  <section class="relative bg-gradient-to-br from-[#EF5B1D] via-[#C46002] to-[#EF5B1D] text-white py-20 overflow-hidden">
    <!-- Roblox brick pattern background -->
    <div class="absolute inset-0 -z-10 roblox-terms-pattern animate-drift"></div>
    <div class="absolute inset-0 -z-10 roblox-terms-glow"></div>
  
    <div class="relative max-w-6xl mx-auto px-6 text-center">
      <!-- Roblox-style badge -->
      <div class="inline-block px-6 py-3 mb-8 bg-[#4387E3] text-white border-4 border-black shadow-[8px_8px_0_#000] transform -rotate-1 roblox-terms-badge">
        <span class="text-sm font-black tracking-widest uppercase">Legal Terms</span>
      </div>

      <!-- Enhanced Title -->
      <h1 class="text-5xl md:text-7xl font-black mb-8 roblox-terms-title">
        {dict.termsTitle}
      </h1>
      <p class="text-xl md:text-2xl text-white max-w-4xl mx-auto leading-relaxed font-semibold mb-12">
        {dict.termsSubtitle}
      </p>
  
      <!-- Roblox-style badges -->
      <div class="flex justify-center gap-4 flex-wrap mb-16">
        <div class="roblox-terms-feature-badge roblox-terms-feature-badge--orange">
          <div class="roblox-terms-badge-icon">üìú</div>
          <span class="roblox-terms-badge-text">{dict.rules}</span>
        </div>
        <div class="roblox-terms-feature-badge roblox-terms-feature-badge--blue">
          <div class="roblox-terms-badge-icon">‚öñÔ∏è</div>
          <span class="roblox-terms-badge-text">{dict.fair}</span>
        </div>
        <div class="roblox-terms-feature-badge roblox-terms-feature-badge--purple">
          <div class="roblox-terms-badge-icon">üéÆ</div>
          <span class="roblox-terms-badge-text">{dict.respect}</span>
        </div>
        <div class="roblox-terms-feature-badge roblox-terms-feature-badge--gray">
          <div class="roblox-terms-badge-icon">üß©</div>
          <span class="roblox-terms-badge-text">{dict.order}</span>
        </div>
        <div class="roblox-terms-feature-badge roblox-terms-feature-badge--orange">
          <div class="roblox-terms-badge-icon">üî•</div>
          <span class="roblox-terms-badge-text">{dict.challenge}</span>
        </div>
      </div>
  
      <!-- Roblox brick tower -->
      <div class="roblox-terms-brick-tower-container">
        <div class="roblox-terms-brick roblox-terms-brick--orange" style="animation-delay: 0s;"></div>
        <div class="roblox-terms-brick roblox-terms-brick--blue" style="animation-delay: 0.2s;"></div>
        <div class="roblox-terms-brick roblox-terms-brick--purple" style="animation-delay: 0.4s;"></div>
        <div class="roblox-terms-brick roblox-terms-brick--gray" style="animation-delay: 0.6s;"></div>
      </div>
    </div>

    <!-- Floating elements -->
    <div class="pointer-events-none absolute inset-0 -z-10">
      <div class="roblox-terms-floating-element" style="top:15%;left:8%;"></div>
      <div class="roblox-terms-floating-element" style="top:30%;right:12%;"></div>
      <div class="roblox-terms-floating-element" style="bottom:25%;left:15%;"></div>
      <div class="roblox-terms-floating-element" style="bottom:40%;right:8%;"></div>
    </div>
  </section>
  

  <!-- Roblox Terms Content Panel -->
  <section class="relative max-w-6xl mx-auto px-6 py-16">
    <div class="roblox-terms-content-panel">
      <div class="roblox-terms-content-header">
        <div class="roblox-terms-content-icon">üìã</div>
        <h2 class="roblox-terms-content-title">Terms & Conditions</h2>
        <div class="roblox-terms-content-decoration">
          <div class="roblox-terms-content-stud"></div>
          <div class="roblox-terms-content-stud"></div>
          <div class="roblox-terms-content-stud"></div>
        </div>
      </div>
      <div class="roblox-terms-content-body">
        <HtmlContent slug="terms" locale={locale} fallbackText="Terms of service not available." />
      </div>
    </div>
  </section>

  <!-- Roblox Terms CTA Section -->
  <section class="relative bg-gradient-to-br from-gray via-[#551084] to-[#4387E3] text-white py-20 overflow-hidden">
    <div class="absolute inset-0 -z-10 roblox-terms-cta-pattern animate-rotate-slow"></div>

    <!-- Floating Roblox elements -->
    <div class="pointer-events-none absolute inset-0 -z-10">
      <div class="roblox-terms-cta-cube" style="top:10%;left:10%;"></div>
      <div class="roblox-terms-cta-cube" style="top:20%;right:15%;"></div>
      <div class="roblox-terms-cta-cube" style="bottom:15%;left:20%;"></div>
      <div class="roblox-terms-cta-cube" style="bottom:25%;right:10%;"></div>
    </div>

    <div class="relative max-w-5xl mx-auto px-6">
      <div class="roblox-terms-cta-panel">
        <div class="roblox-terms-cta-header">
          <div class="roblox-terms-cta-badge">Fair Play Guaranteed</div>
        </div>
        <h2 class="roblox-terms-cta-title">
          {dict.termsCTA}
        </h2>
        <p class="roblox-terms-cta-text">
          {dict.termsCTAText}
        </p>

        <div class="roblox-terms-cta-actions">
          <a href={`/${locale}/`} aria-label={dict.termsCTAButton} class="roblox-terms-cta-button">
            <span class="roblox-terms-cta-button__text">{dict.termsCTAButton}</span>
            <div class="roblox-terms-cta-button__glow"></div>
          </a>
        </div>
        
        <!-- Decorative elements -->
        <div class="roblox-terms-cta-decoration">
          <div class="roblox-terms-cta-brick roblox-terms-cta-brick--blue"></div>
          <div class="roblox-terms-cta-brick roblox-terms-cta-brick--orange"></div>
          <div class="roblox-terms-cta-brick roblox-terms-cta-brick--purple"></div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  /* Roblox Terms Page Styles */
  
  /* Hero Section */
  .roblox-terms-pattern {
    background-image: 
      radial-gradient(circle at 60px 60px, rgba(67, 135, 227, 0.1) 8px, transparent 9px),
      radial-gradient(circle at 180px 60px, rgba(85, 16, 132, 0.1) 8px, transparent 9px),
      radial-gradient(circle at 120px 180px, rgba(192, 181, 177, 0.1) 8px, transparent 9px);
    background-size: 240px 240px;
  }

  .roblox-terms-glow {
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    animation: glow-sweep 6s ease-in-out infinite;
  }

  .roblox-terms-badge {
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }
  .roblox-terms-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    animation: badge-shine 3s infinite;
  }

  .roblox-terms-title {
    text-shadow: 6px 6px 0 #000, -3px -3px 0 #000, 3px -3px 0 #000, -3px 3px 0 #000;
    letter-spacing: 3px;
    background: linear-gradient(45deg, #4387E3, #551084, #EF5B1D, #C46002);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 300% 300%;
    animation: gradient-shift 4s ease-in-out infinite;
  }

  /* Feature Badges */
  .roblox-terms-feature-badge {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border: 4px solid #000;
    border-radius: 16px;
    box-shadow: 6px 6px 0 #000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .roblox-terms-feature-badge--orange { background: linear-gradient(45deg, #EF5B1D, #C46002); }
  .roblox-terms-feature-badge--blue { background: linear-gradient(45deg, #4387E3, #551084); }
  .roblox-terms-feature-badge--purple { background: linear-gradient(45deg, #551084, #4387E3); }
  .roblox-terms-feature-badge--gray { background: linear-gradient(45deg, #C0B5B1, #B6ABA8); }

  .roblox-terms-feature-badge:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 10px 10px 0 #000;
  }

  .roblox-terms-badge-icon {
    font-size: 1.5rem;
    width: 40px;
    height: 40px;
    background: rgba(255,255,255,0.2);
    border: 3px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 3px 3px 0 #000;
  }

  .roblox-terms-badge-text {
    font-weight: 900;
    color: white;
    text-shadow: 2px 2px 0 #000;
    font-size: 1rem;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  /* Brick Tower */
  .roblox-terms-brick-tower-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .roblox-terms-brick {
    width: 60px;
    height: 40px;
    border: 4px solid #000;
    border-radius: 8px;
    position: relative;
    box-shadow: 6px 6px 0 #000;
    animation: brick-float 4s ease-in-out infinite;
  }

  .roblox-terms-brick::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 25%;
    transform: translateY(-50%);
    width: 12px;
    height: 12px;
    background: rgba(255,255,255,0.4);
    border-radius: 50%;
    box-shadow: 16px 0 0 rgba(255,255,255,0.4);
  }

  .roblox-terms-brick--orange { background: linear-gradient(135deg, #EF5B1D, #C46002); }
  .roblox-terms-brick--blue { background: linear-gradient(135deg, #4387E3, #551084); }
  .roblox-terms-brick--purple { background: linear-gradient(135deg, #551084, #4387E3); }
  .roblox-terms-brick--gray { background: linear-gradient(135deg, #C0B5B1, #B6ABA8); }

  /* Floating Elements */
  .roblox-terms-floating-element {
    position: absolute;
    width: 16px;
    height: 16px;
    background: linear-gradient(45deg, #4387E3, #EF5B1D);
    border: 3px solid #000;
    border-radius: 4px;
    box-shadow: 3px 3px 0 #000;
    animation: element-float 6s ease-in-out infinite;
  }

  .roblox-terms-floating-element::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 6px;
    height: 6px;
    background: rgba(255,255,255,0.6);
    border-radius: 50%;
  }

  /* Content Panel */
  .roblox-terms-content-panel {
    background: linear-gradient(135deg, #ffffff, #f8f9fa);
    border: 4px solid #000;
    border-radius: 20px;
    box-shadow: 10px 10px 0 #000;
    overflow: hidden;
  }

  .roblox-terms-content-header {
    background: linear-gradient(45deg, #EF5B1D, #C46002);
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 4px solid #000;
  }

  .roblox-terms-content-icon {
    font-size: 2rem;
    width: 60px;
    height: 60px;
    background: rgba(255,255,255,0.2);
    border: 4px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 4px 4px 0 #000;
  }

  .roblox-terms-content-title {
    font-size: 2rem;
    font-weight: 900;
    color: white;
    text-shadow: 3px 3px 0 #000;
    letter-spacing: 2px;
    flex: 1;
    text-align: center;
  }

  .roblox-terms-content-decoration {
    display: flex;
    gap: 0.5rem;
  }

  .roblox-terms-content-stud {
    width: 16px;
    height: 16px;
    background: rgba(255,255,255,0.3);
    border: 2px solid #000;
    border-radius: 50%;
    animation: stud-pulse 2s ease-in-out infinite;
  }

  .roblox-terms-content-body {
    padding: 3rem;
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
  }

  /* CTA Section */
  .roblox-terms-cta-pattern {
    background-image: 
      radial-gradient(circle at 120px 120px, rgba(239, 91, 29, 0.1) 12px, transparent 13px),
      radial-gradient(circle at 360px 120px, rgba(67, 135, 227, 0.1) 12px, transparent 13px),
      radial-gradient(circle at 240px 360px, rgba(85, 16, 132, 0.1) 12px, transparent 13px);
    background-size: 480px 480px;
  }

  .roblox-terms-cta-cube {
    position: absolute;
    width: 20px;
    height: 20px;
    background: linear-gradient(45deg, #EF5B1D, #C46002);
    border: 3px solid #000;
    border-radius: 4px;
    box-shadow: 4px 4px 0 #000;
    animation: cube-spin 8s ease-in-out infinite;
  }

  .roblox-terms-cta-cube::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: rgba(255,255,255,0.5);
    border-radius: 50%;
  }

  .roblox-terms-cta-panel {
    background: linear-gradient(135deg, #ffffff, #f8f9fa);
    border: 4px solid #000;
    border-radius: 24px;
    padding: 3rem;
    text-align: center;
    box-shadow: 12px 12px 0 #000;
    position: relative;
    overflow: hidden;
  }

  .roblox-terms-cta-header {
    margin-bottom: 2rem;
  }

  .roblox-terms-cta-badge {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(45deg, #EF5B1D, #C46002);
    color: white;
    border: 3px solid #000;
    border-radius: 20px;
    font-weight: 900;
    font-size: 1rem;
    text-shadow: 2px 2px 0 #000;
    box-shadow: 4px 4px 0 #000;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .roblox-terms-cta-title {
    font-size: 3rem;
    font-weight: 900;
    color: #000;
    margin-bottom: 1.5rem;
    text-shadow: 3px 3px 0 rgba(0,0,0,0.1);
    line-height: 1.2;
  }

  .roblox-terms-cta-text {
    font-size: 1.25rem;
    color: #555;
    margin-bottom: 2.5rem;
    font-weight: 600;
    line-height: 1.6;
  }

  .roblox-terms-cta-actions {
    margin-bottom: 2rem;
  }

  .roblox-terms-cta-button {
    position: relative;
    display: inline-block;
    padding: 1.5rem 3rem;
    background: linear-gradient(45deg, #EF5B1D, #C46002);
    color: white;
    border: 4px solid #000;
    border-radius: 20px;
    font-weight: 900;
    font-size: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    box-shadow: 10px 10px 0 #000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    transform: translateY(0);
  }

  .roblox-terms-cta-button__text {
    position: relative;
    z-index: 2;
  }

  .roblox-terms-cta-button__glow {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.6s ease;
    z-index: 1;
  }

  .roblox-terms-cta-button:hover {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 15px 15px 0 #000, 0 25px 50px rgba(239, 91, 29, 0.4);
  }

  .roblox-terms-cta-button:hover .roblox-terms-cta-button__glow {
    left: 100%;
  }

  .roblox-terms-cta-decoration {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .roblox-terms-cta-brick {
    width: 30px;
    height: 20px;
    border: 3px solid #000;
    border-radius: 6px;
    box-shadow: 3px 3px 0 #000;
    position: relative;
    animation: cta-brick-bounce 3s ease-in-out infinite;
  }

  .roblox-terms-cta-brick::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 25%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    background: rgba(255,255,255,0.4);
    border-radius: 50%;
    box-shadow: 10px 0 0 rgba(255,255,255,0.4);
  }

  .roblox-terms-cta-brick--blue { 
    background: linear-gradient(135deg, #4387E3, #551084);
    animation-delay: 0s;
  }
  .roblox-terms-cta-brick--orange { 
    background: linear-gradient(135deg, #EF5B1D, #C46002);
    animation-delay: 0.5s;
  }
  .roblox-terms-cta-brick--purple { 
    background: linear-gradient(135deg, #551084, #4387E3);
    animation-delay: 1s;
  }
</style>
