---
import Layout from "../../layouts/Layout.astro";
import { getLangStaticPaths, resolveLang } from "../../lib/i18n";
import HtmlContent from "../../components/HtmlContent.astro";
import Footer from "../../components/Footer.astro";
export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../../locales/${locale}.json`).then((m) => m.default);
---

<Layout lang={locale} title={dict.aboutTitle}>
  <!-- Roblox Hero Section -->
  <section class="relative bg-gradient-to-br from-gray via-[#551084] to-[#4387E3] text-white py-20 overflow-hidden">
    <!-- Roblox brick pattern background -->
    <div class="absolute inset-0 -z-10 roblox-about-pattern animate-drift"></div>
    <div class="absolute inset-0 -z-10 roblox-about-glow"></div>
  
    <div class="relative max-w-6xl mx-auto px-6 text-center">
      <!-- Roblox-style badge -->
      <div class="inline-block px-6 py-3 mb-8 bg-[#EF5B1D] text-white border-4 border-black shadow-[8px_8px_0_#000] transform rotate-1 roblox-about-badge">
        <span class="text-sm font-black tracking-widest uppercase">{dict.about}</span>
      </div>

      <!-- Enhanced Title -->
      <h1 class="text-5xl md:text-7xl font-black mb-8 roblox-about-title">
        {dict.aboutTitle}
      </h1>
      <p class="text-xl md:text-2xl text-black max-w-4xl mx-auto leading-relaxed font-semibold mb-12">
        {dict.aboutSubtitle}
      </p>
  
      <!-- Roblox-style badges -->
      <div class="flex justify-center gap-4 flex-wrap mb-16">
        <div class="roblox-feature-badge roblox-feature-badge--orange">
          <div class="roblox-badge-icon">üé®</div>
          <span class="roblox-badge-text">{dict.roblox}</span>
        </div>
        <div class="roblox-feature-badge roblox-feature-badge--blue">
          <div class="roblox-badge-icon">üïπ</div>
          <span class="roblox-badge-text">{dict.retro}</span>
        </div>
        <div class="roblox-feature-badge roblox-feature-badge--purple">
          <div class="roblox-badge-icon">‚≠ê</div>
          <span class="roblox-badge-text">{dict.creativity}</span>
        </div>
        <div class="roblox-feature-badge roblox-feature-badge--gray">
          <div class="roblox-badge-icon">üí°</div>
          <span class="roblox-badge-text">{dict.inspiration}</span>
        </div>
        <div class="roblox-feature-badge roblox-feature-badge--orange">
          <div class="roblox-badge-icon">üé∂</div>
          <span class="roblox-badge-text">{dict.fun}</span>
        </div>
      </div>
  
      <!-- Roblox brick tower -->
      <div class="roblox-brick-tower-container">
        <div class="roblox-about-brick roblox-about-brick--orange" style="animation-delay: 0s;"></div>
        <div class="roblox-about-brick roblox-about-brick--blue" style="animation-delay: 0.2s;"></div>
        <div class="roblox-about-brick roblox-about-brick--purple" style="animation-delay: 0.4s;"></div>
        <div class="roblox-about-brick roblox-about-brick--gray" style="animation-delay: 0.6s;"></div>
        <div class="roblox-about-brick roblox-about-brick--orange" style="animation-delay: 0.8s;"></div>
      </div>
    </div>

    <!-- Floating elements -->
    <div class="pointer-events-none absolute inset-0 -z-10">
      <div class="roblox-floating-element" style="top:15%;left:8%;"></div>
      <div class="roblox-floating-element" style="top:30%;right:12%;"></div>
      <div class="roblox-floating-element" style="bottom:25%;left:15%;"></div>
      <div class="roblox-floating-element" style="bottom:40%;right:8%;"></div>
    </div>
  </section>
  

  <!-- Roblox Content Panel -->
  <section class="relative max-w-6xl mx-auto px-6 py-16">
    <div class="roblox-content-panel">
      <div class="roblox-content-header">
        <div class="roblox-content-icon">üìñ</div>
        
        <div class="roblox-content-decoration">
          <div class="roblox-content-stud"></div>
          <div class="roblox-content-stud"></div>
          <div class="roblox-content-stud"></div>
        </div>
      </div>
      <div class="roblox-content-body">
        <HtmlContent slug="about" locale={locale} fallbackText="About page not available." />
      </div>
    </div>
  </section>

  <!-- Roblox Feature Grid -->
  <section class="py-16 bg-gradient-to-br from-[#C0B5B1] via-[#B6ABA8] to-[#C0B5B1] relative overflow-hidden">
    <div class="absolute inset-0 -z-10 roblox-features-pattern animate-pulse-gentle"></div>
    
    <div class="max-w-6xl mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-8 text-center relative z-10">
      <div class="roblox-about-card roblox-about-card--1">
        <div class="roblox-card-number">01</div>
        <div class="roblox-card-icon roblox-card-icon--orange">üéÆ</div>
        <h3 class="roblox-card-title">{dict.aboutCard1Title}</h3>
        <p class="roblox-card-text">{dict.aboutCard1Text}</p>
        <div class="roblox-card-glow"></div>
      </div>
      <div class="roblox-about-card roblox-about-card--2">
        <div class="roblox-card-number">02</div>
        <div class="roblox-card-icon roblox-card-icon--blue">üß±</div>
        <h3 class="roblox-card-title">{dict.aboutCard2Title}</h3>
        <p class="roblox-card-text">{dict.aboutCard2Text}</p>
        <div class="roblox-card-glow"></div>
      </div>
      <div class="roblox-about-card roblox-about-card--3">
        <div class="roblox-card-number">03</div>
        <div class="roblox-card-icon roblox-card-icon--purple">‚ö°</div>
        <h3 class="roblox-card-title">{dict.aboutCard3Title}</h3>
        <p class="roblox-card-text">{dict.aboutCard3Text}</p>
        <div class="roblox-card-glow"></div>
      </div>
    </div>
  </section>



  <!-- Roblox CTA Section -->
  <section class="relative bg-white text-white py-20 overflow-hidden">
    <div class="absolute inset-0 -z-10 roblox-cta-pattern animate-rotate-slow"></div>

    <!-- Floating Roblox elements -->
    <div class="pointer-events-none absolute inset-0 -z-10">
      <div class="roblox-cta-cube" style="top:10%;left:10%;"></div>
      <div class="roblox-cta-cube" style="top:20%;right:15%;"></div>
      <div class="roblox-cta-cube" style="bottom:15%;left:20%;"></div>
      <div class="roblox-cta-cube" style="bottom:25%;right:10%;"></div>
    </div>

    <div class="relative max-w-5xl mx-auto px-6">
      <div class="roblox-cta-panel">
        <div class="roblox-cta-header">
          <div class="roblox-cta-badge">Ready to Play?</div>
        </div>
        <h2 class="roblox-cta-title">
          {dict.aboutCTA}
        </h2>
        <p class="roblox-cta-text">
          {dict.aboutCTAText}
        </p>

        <div class="roblox-cta-actions">
          <a href={`/${locale}/`} aria-label={dict.aboutCTAButton} class="roblox-cta-button">
            <span class="roblox-cta-button__text">{dict.aboutCTAButton}</span>
            <div class="roblox-cta-button__glow"></div>
          </a>
        </div>
        
        <!-- Decorative elements -->
        <div class="roblox-cta-decoration">
          <div class="roblox-cta-brick roblox-cta-brick--blue"></div>
          <div class="roblox-cta-brick roblox-cta-brick--purple"></div>
          <div class="roblox-cta-brick roblox-cta-brick--gray"></div>
        </div>
      </div>
    </div>
  </section>
  <Footer />
</Layout>

<style>
  /* Roblox About Page Styles */
  
  /* Hero Section */
  .roblox-about-pattern {
    background-image: 
      radial-gradient(circle at 50px 50px, rgba(239, 91, 29, 0.1) 6px, transparent 7px),
      radial-gradient(circle at 150px 50px, rgba(192, 181, 177, 0.1) 6px, transparent 7px),
      radial-gradient(circle at 100px 150px, rgba(182, 171, 168, 0.1) 6px, transparent 7px);
    background-size: 200px 200px;
  }

  .roblox-about-glow {
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    animation: glow-sweep 6s ease-in-out infinite;
  }

  .animate-drift {
    animation: drift 25s ease-in-out infinite;
  }

  @keyframes drift {
    0%, 100% { transform: translateX(0) translateY(0); }
    25% { transform: translateX(-20px) translateY(-10px); }
    50% { transform: translateX(0) translateY(-20px); }
    75% { transform: translateX(20px) translateY(-10px); }
  }

  @keyframes glow-sweep {
    0%, 100% { transform: translateX(-100%); }
    50% { transform: translateX(100%); }
  }

  .roblox-about-badge {
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }
  .roblox-about-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    animation: badge-shine 3s infinite;
  }

  @keyframes badge-shine {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  .roblox-about-title {
    text-shadow: 6px 6px 0 #000, -3px -3px 0 #000, 3px -3px 0 #000, -3px 3px 0 #000;
    letter-spacing: 3px;
    background: linear-gradient(45deg, #EF5B1D, #C46002, #4387E3, #551084);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 300% 300%;
    animation: gradient-shift 4s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Feature Badges */
  .roblox-feature-badge {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border: 4px solid #000;
    border-radius: 16px;
    box-shadow: 6px 6px 0 #000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .roblox-feature-badge--orange { background: linear-gradient(45deg, #EF5B1D, #C46002); }
  .roblox-feature-badge--blue { background: linear-gradient(45deg, #4387E3, #551084); }
  .roblox-feature-badge--purple { background: linear-gradient(45deg, #551084, #4387E3); }
  .roblox-feature-badge--gray { background: linear-gradient(45deg, #C0B5B1, #B6ABA8); }

  .roblox-feature-badge:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 10px 10px 0 #000;
  }

  .roblox-badge-icon {
    font-size: 1.5rem;
    width: 40px;
    height: 40px;
    background: rgba(255,255,255,0.2);
    border: 3px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 3px 3px 0 #000;
  }

  .roblox-badge-text {
    font-weight: 900;
    color: white;
    text-shadow: 2px 2px 0 #000;
    font-size: 1rem;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  /* Brick Tower */
  .roblox-brick-tower-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .roblox-about-brick {
    width: 60px;
    height: 40px;
    border: 4px solid #000;
    border-radius: 8px;
    position: relative;
    box-shadow: 6px 6px 0 #000;
    animation: brick-float 4s ease-in-out infinite;
  }

  .roblox-about-brick::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 25%;
    transform: translateY(-50%);
    width: 12px;
    height: 12px;
    background: rgba(255,255,255,0.4);
    border-radius: 50%;
    box-shadow: 16px 0 0 rgba(255,255,255,0.4);
  }

  .roblox-about-brick--orange { background: linear-gradient(135deg, #EF5B1D, #C46002); }
  .roblox-about-brick--blue { background: linear-gradient(135deg, #4387E3, #551084); }
  .roblox-about-brick--purple { background: linear-gradient(135deg, #551084, #4387E3); }
  .roblox-about-brick--gray { background: linear-gradient(135deg, #C0B5B1, #B6ABA8); }

  @keyframes brick-float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(5deg); }
  }

  /* Floating Elements */
  .roblox-floating-element {
    position: absolute;
    width: 16px;
    height: 16px;
    background: linear-gradient(45deg, #EF5B1D, #4387E3);
    border: 3px solid #000;
    border-radius: 4px;
    box-shadow: 3px 3px 0 #000;
    animation: element-float 6s ease-in-out infinite;
  }

  .roblox-floating-element::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 6px;
    height: 6px;
    background: rgba(255,255,255,0.6);
    border-radius: 50%;
  }

  @keyframes element-float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    33% { transform: translateY(-20px) rotate(120deg); }
    66% { transform: translateY(-10px) rotate(240deg); }
  }

  /* Content Panel */
  .roblox-content-panel {
    background: linear-gradient(135deg, #ffffff, #f8f9fa);
    border: 4px solid #000;
    border-radius: 20px;
    box-shadow: 10px 10px 0 #000;
    overflow: hidden;
  }

  .roblox-content-header {
    background: linear-gradient(45deg, #4387E3, #551084);
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 4px solid #000;
  }

  .roblox-content-icon {
    font-size: 2rem;
    width: 60px;
    height: 60px;
    background: rgba(255,255,255,0.2);
    border: 4px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 4px 4px 0 #000;
  }

  .roblox-content-title {
    font-size: 2rem;
    font-weight: 900;
    color: white;
    text-shadow: 3px 3px 0 #000;
    letter-spacing: 2px;
    flex: 1;
    text-align: center;
  }

  .roblox-content-decoration {
    display: flex;
    gap: 0.5rem;
  }

  .roblox-content-stud {
    width: 16px;
    height: 16px;
    background: rgba(255,255,255,0.3);
    border: 2px solid #000;
    border-radius: 50%;
    animation: stud-pulse 2s ease-in-out infinite;
  }

  @keyframes stud-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
  }

  .roblox-content-body {
    padding: 3rem;
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
  }

  /* About Cards */
  .roblox-features-pattern {
    background-image: 
      radial-gradient(circle at 80px 80px, rgba(67, 135, 227, 0.08) 8px, transparent 9px),
      radial-gradient(circle at 240px 80px, rgba(85, 16, 132, 0.08) 8px, transparent 9px),
      radial-gradient(circle at 160px 240px, rgba(239, 91, 29, 0.08) 8px, transparent 9px);
    background-size: 320px 320px;
  }

  .animate-pulse-gentle {
    animation: pulse-gentle 6s ease-in-out infinite;
  }

  @keyframes pulse-gentle {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  .roblox-about-card {
    position: relative;
    background: linear-gradient(135deg, #ffffff, #f8f9fa);
    border: 4px solid #000;
    border-radius: 20px;
    padding: 2.5rem;
    overflow: hidden;
    transform: translateY(0) rotate(0deg);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 8px 8px 0 #000;
  }

  .roblox-about-card--1 { transform: rotate(-2deg); }
  .roblox-about-card--2 { transform: rotate(1deg); }
  .roblox-about-card--3 { transform: rotate(-1deg); }

  .roblox-about-card:hover {
    transform: translateY(-12px) rotate(0deg) scale(1.05);
    box-shadow: 16px 16px 0 #000, 0 25px 50px rgba(0,0,0,0.15);
  }

  .roblox-card-number {
    position: absolute;
    top: -15px;
    left: -15px;
    width: 50px;
    height: 50px;
    background: linear-gradient(45deg, #EF5B1D, #C46002);
    border: 4px solid #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1.5rem;
    color: white;
    text-shadow: 2px 2px 0 #000;
    box-shadow: 4px 4px 0 #000;
    z-index: 2;
  }

  .roblox-card-icon {
    width: 80px;
    height: 80px;
    border: 4px solid #000;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin: 0 auto 1.5rem;
    box-shadow: 6px 6px 0 #000;
  }

  .roblox-card-icon--orange { background: linear-gradient(135deg, #EF5B1D, #C46002); }
  .roblox-card-icon--blue { background: linear-gradient(135deg, #4387E3, #551084); }
  .roblox-card-icon--purple { background: linear-gradient(135deg, #551084, #4387E3); }

  .roblox-card-title {
    font-size: 1.5rem;
    font-weight: 900;
    color: #000;
    margin-bottom: 1rem;
    text-shadow: 1px 1px 0 rgba(0,0,0,0.1);
  }

  .roblox-card-text {
    color: #555;
    font-weight: 500;
    line-height: 1.6;
  }

  .roblox-card-glow {
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    background: linear-gradient(45deg, rgba(239, 91, 29, 0.1), rgba(67, 135, 227, 0.1), rgba(85, 16, 132, 0.1));
    border-radius: 24px;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -1;
  }

  .roblox-about-card:hover .roblox-card-glow {
    opacity: 1;
  }

  /* CTA Section */
  .roblox-cta-pattern {
    background-image: 
      radial-gradient(circle at 100px 100px, rgba(67, 135, 227, 0.1) 10px, transparent 11px),
      radial-gradient(circle at 300px 100px, rgba(85, 16, 132, 0.1) 10px, transparent 11px),
      radial-gradient(circle at 200px 300px, rgba(192, 181, 177, 0.1) 10px, transparent 11px);
    background-size: 400px 400px;
  }

  .animate-rotate-slow {
    animation: rotate-slow 60s linear infinite;
  }

  @keyframes rotate-slow {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .roblox-cta-cube {
    position: absolute;
    width: 20px;
    height: 20px;
    background: linear-gradient(45deg, #4387E3, #551084);
    border: 3px solid #000;
    border-radius: 4px;
    box-shadow: 4px 4px 0 #000;
    animation: cube-spin 8s ease-in-out infinite;
  }

  .roblox-cta-cube::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 8px;
    height: 8px;
    background: rgba(255,255,255,0.5);
    border-radius: 50%;
  }

  @keyframes cube-spin {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    25% { transform: translateY(-15px) rotate(90deg); }
    50% { transform: translateY(-8px) rotate(180deg); }
    75% { transform: translateY(-20px) rotate(270deg); }
  }

  .roblox-cta-panel {
    background: linear-gradient(135deg, #ffffff, #f8f9fa);
    border: 4px solid #000;
    border-radius: 24px;
    padding: 3rem;
    text-align: center;
    box-shadow: 12px 12px 0 #000;
    position: relative;
    overflow: hidden;
  }

  .roblox-cta-header {
    margin-bottom: 2rem;
  }

  .roblox-cta-badge {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(45deg, #4387E3, #551084);
    color: white;
    border: 3px solid #000;
    border-radius: 20px;
    font-weight: 900;
    font-size: 1rem;
    text-shadow: 2px 2px 0 #000;
    box-shadow: 4px 4px 0 #000;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .roblox-cta-title {
    font-size: 3rem;
    font-weight: 900;
    color: #000;
    margin-bottom: 1.5rem;
    text-shadow: 3px 3px 0 rgba(0,0,0,0.1);
    line-height: 1.2;
  }

  .roblox-cta-text {
    font-size: 1.25rem;
    color: #555;
    margin-bottom: 2.5rem;
    font-weight: 600;
    line-height: 1.6;
  }

  .roblox-cta-actions {
    margin-bottom: 2rem;
  }

  .roblox-cta-button {
    position: relative;
    display: inline-block;
    padding: 1.5rem 3rem;
    background: linear-gradient(45deg, #4387E3, #551084);
    color: white;
    border: 4px solid #000;
    border-radius: 20px;
    font-weight: 900;
    font-size: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    box-shadow: 10px 10px 0 #000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    transform: translateY(0);
  }

  .roblox-cta-button__text {
    position: relative;
    z-index: 2;
  }

  .roblox-cta-button__glow {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.6s ease;
    z-index: 1;
  }

  .roblox-cta-button:hover {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 15px 15px 0 #000, 0 25px 50px rgba(67, 135, 227, 0.4);
  }

  .roblox-cta-button:hover .roblox-cta-button__glow {
    left: 100%;
  }

  .roblox-cta-decoration {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  .roblox-cta-brick {
    width: 30px;
    height: 20px;
