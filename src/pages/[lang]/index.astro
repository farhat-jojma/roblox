---
import Hero from "../../components/Hero.astro";
import Game from "../../components/Game.astro";
import Layout from "../../layouts/Layout.astro";
import OtherGames from "../../components/OtherGames.astro";
import HowToPlay from "../../components/HowToPlay.astro";
import Tips from "../../components/Tips.astro";
import Features from "../../components/Features.astro";
import Unblocked from "../../components/Unblocked.astro";
import Faq from "../../components/Faq.astro";
import Footer from "../../components/Footer.astro";
import { getLangStaticPaths, resolveLang } from "../../lib/i18n";

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../../locales/${locale}.json`).then((m) => m.default);
---

<Layout lang={locale} title={dict.title} description={dict.description} isHomePage={true}>
  <div class="flex h-full">
    <main class="flex-1 flex flex-col items-center justify-center">
      <div class="w-full">
        <Game path="https://games-dun-one.vercel.app/Roblox/index.html" />
      </div>
        <OtherGames />
        <Hero />
        <HowToPlay />
        <Tips />
        <Features />
        <Unblocked />
        <Faq />
        <Footer />
    </main>
  </div>
</Layout>
