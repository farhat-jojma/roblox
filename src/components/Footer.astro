---
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export interface Props {}
const {} = Astro.props;

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
---

<footer class="w-full mt-16 bg-gradient-to-br from-[#551084] via-[#4387E3] to-[#551084] text-white relative overflow-hidden" lang={locale}>
  <div class="absolute inset-0 -z-10 roblox-footer-pattern animate-drift-slow"></div>
  <div class="roblox-footer-divider"></div>
  
  <div class="w-full px-6 md:px-10 py-16 relative z-10">
    <div class="grid md:grid-cols-3 gap-12">
      <!-- Brand Section -->
      <div class="space-y-6">
        <div class="roblox-footer-brand">
          <div class="roblox-footer-logo">
            <img 
              class="roblox-logo-img" 
              src="/favicon.png" 
              alt={dict.siteName} 
              width="40" 
              height="40"
              loading="lazy" 
              decoding="async"
            />
            <div class="roblox-logo-glow"></div>
          </div>
          <div class="roblox-brand-text">
            <span class="roblox-brand-title">Pixel Drawing</span>
            <span class="roblox-brand-subtitle">Online</span>
          </div>
        </div>
        <p class="text-gray-100 text-lg font-medium leading-relaxed">{dict.footerSubtitle}</p>
        
        <!-- Decorative Bricks -->
        <div class="flex gap-3">
          <div class="roblox-footer-brick roblox-footer-brick--orange"></div>
          <div class="roblox-footer-brick roblox-footer-brick--blue"></div>
          <div class="roblox-footer-brick roblox-footer-brick--purple"></div>
        </div>
      </div>

      <!-- Navigation Section -->
      <nav class="roblox-footer-nav">
        <h3 class="roblox-footer-nav-title">{dict.footerExplore}</h3>
        <ul class="space-y-4">
          <li><a href={`/${locale}/`} class="roblox-footer-link">{dict.footerPlay}</a></li>
          <li>
            <button
              type="button"
              onclick={`event.preventDefault(); goToSection('how-to-play','${locale}');`}
              class="roblox-footer-link"
            >
              {dict.footerHowToPlay}
            </button>
          </li>
          <li>
            <button
              type="button"
              onclick={`event.preventDefault(); goToSection('tips','${locale}');`}
              class="roblox-footer-link"
            >
              {dict.footerTips}
            </button>
          </li>
        </ul>
      </nav>

      <!-- Legal Section -->
      <nav class="roblox-footer-nav">
        <h3 class="roblox-footer-nav-title">{dict.footerLegal}</h3>
        <ul class="space-y-4">
          <li><a href={`/${locale}/about`} class="roblox-footer-link">{dict.footerAbout}</a></li>
          <li><a href={`/${locale}/privacy-policy`} class="roblox-footer-link">{dict.footerPrivacy}</a></li>
          <li><a href={`/${locale}/terms-of-service`} class="roblox-footer-link">{dict.footerTerms}</a></li>
        </ul>
      </nav>
    </div>

    <!-- Footer Bottom -->
    <div class="mt-16 pt-8 border-t-4 border-black">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div class="roblox-footer-copyright">
          <span class="text-white font-bold text-lg">© {new Date().getFullYear()} Pixel Drawing Online</span>
        </div>
        <div class="flex items-center gap-4">
          <div class="roblox-social-icon roblox-social-icon--orange" title="Connect">
            <div class="roblox-social-dot"></div>
          </div>
          <div class="roblox-social-icon roblox-social-icon--blue" title="Share">
            <div class="roblox-social-dot"></div>
          </div>
          <div class="roblox-social-icon roblox-social-icon--purple" title="Follow">
            <div class="roblox-social-dot"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Floating Elements -->
  <div class="pointer-events-none absolute inset-0 -z-10">
    <div class="roblox-floating-cube" style="top:20%;left:10%;"></div>
    <div class="roblox-floating-cube" style="top:60%;right:15%;"></div>
    <div class="roblox-floating-cube" style="bottom:30%;left:20%;"></div>
  </div>
  <script is:inline>
    function goToSection(sectionId, locale) {
      const isHome = window.location.pathname === `/${locale}/`;
  
      if (isHome) {
        // Déjà sur la home → scroll direct
        const el = document.getElementById(sectionId);
        if (el) {
          el.scrollIntoView({ behavior: "smooth" });
        }
      } else {
        // Pas sur la home → stocke l'info et redirige
        localStorage.setItem("scrollTo", sectionId);
        window.location.href = `/${locale}/`;
      }
    }
  </script>

  <style>
    /* Footer background pattern */
    .roblox-footer-pattern {
      background-image: 
        radial-gradient(circle at 100px 100px, rgba(239, 91, 29, 0.08) 12px, transparent 13px),
        radial-gradient(circle at 300px 100px, rgba(192, 181, 177, 0.08) 12px, transparent 13px),
        radial-gradient(circle at 200px 300px, rgba(182, 171, 168, 0.08) 12px, transparent 13px);
      background-size: 400px 400px;
    }

    .animate-drift-slow {
      animation: drift-slow 40s ease-in-out infinite;
    }

    @keyframes drift-slow {
      0%, 100% { transform: translateX(0) translateY(0); }
      25% { transform: translateX(-30px) translateY(-15px); }
      50% { transform: translateX(0) translateY(-30px); }
      75% { transform: translateX(30px) translateY(-15px); }
    }

    /* Footer divider */
    .roblox-footer-divider {
      height: 8px;
      background: linear-gradient(90deg, #EF5B1D, #C46002, #4387E3, #551084, #EF5B1D);
      background-size: 200% 100%;
      animation: gradient-slide 6s ease-in-out infinite;
      position: relative;
    }

    .roblox-footer-divider::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      animation: shine-sweep 3s ease-in-out infinite;
    }

    @keyframes gradient-slide {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    @keyframes shine-sweep {
      0% { transform: translateX(-100%); }
      100% { transform: translateX(100%); }
    }

    /* Brand section */
    .roblox-footer-brand {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .roblox-footer-logo {
      position: relative;
      width: 60px;
      height: 60px;
      background: linear-gradient(45deg, #EF5B1D, #C46002);
      border: 4px solid #000;
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 6px 6px 0 #000;
      overflow: hidden;
    }

    .roblox-logo-img {
      position: relative;
      z-index: 2;
      filter: drop-shadow(2px 2px 0 #000);
    }

    .roblox-logo-glow {
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at center, rgba(255,255,255,0.3), transparent);
      opacity: 0;
      animation: logo-pulse 4s ease-in-out infinite;
    }

    @keyframes logo-pulse {
      0%, 100% { opacity: 0; transform: scale(1); }
      50% { opacity: 1; transform: scale(1.1); }
    }

    .roblox-brand-text {
      display: flex;
      flex-direction: column;
    }

    .roblox-brand-title {
      font-size: 1.5rem;
      font-weight: 900;
      color: white;
      text-shadow: 3px 3px 0 #000;
      letter-spacing: 1px;
      line-height: 1;
    }

    .roblox-brand-subtitle {
      font-size: 1rem;
      font-weight: 700;
      color: #EF5B1D;
      text-shadow: 2px 2px 0 #000;
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    /* Footer bricks */
    .roblox-footer-brick {
      width: 30px;
      height: 20px;
      border: 3px solid #000;
      border-radius: 6px;
      box-shadow: 3px 3px 0 #000;
      position: relative;
      animation: brick-bob 3s ease-in-out infinite;
    }

    .roblox-footer-brick::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 25%;
      transform: translateY(-50%);
      width: 6px;
      height: 6px;
      background: rgba(255,255,255,0.4);
      border-radius: 50%;
      box-shadow: 10px 0 0 rgba(255,255,255,0.4);
    }

    .roblox-footer-brick--orange { 
      background: linear-gradient(135deg, #EF5B1D, #C46002);
      animation-delay: 0s;
    }
    .roblox-footer-brick--blue { 
      background: linear-gradient(135deg, #4387E3, #551084);
      animation-delay: 0.5s;
    }
    .roblox-footer-brick--purple { 
      background: linear-gradient(135deg, #551084, #4387E3);
      animation-delay: 1s;
    }

    @keyframes brick-bob {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-8px); }
    }

    /* Navigation */
    .roblox-footer-nav-title {
      font-size: 1.25rem;
      font-weight: 900;
      color: white;
      text-shadow: 3px 3px 0 #000;
      letter-spacing: 1px;
      margin-bottom: 1.5rem;
      position: relative;
    }

    .roblox-footer-nav-title::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 0;
      width: 40px;
      height: 4px;
      background: linear-gradient(90deg, #EF5B1D, #C46002);
      border-radius: 2px;
    }

    .roblox-footer-link {
      display: inline-block;
      color: #E5E7EB;
      font-weight: 600;
      font-size: 1rem;
      text-decoration: none;
      transition: all 0.3s ease;
      position: relative;
      padding: 0.5rem 0;
      border: none;
      background: none;
      cursor: pointer;
    }

    .roblox-footer-link::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      width: 0;
      height: 3px;
      background: linear-gradient(90deg, #EF5B1D, #4387E3);
      transition: width 0.3s ease;
      border-radius: 2px;
    }

    .roblox-footer-link:hover {
      color: white;
      transform: translateX(8px);
    }

    .roblox-footer-link:hover::before {
      width: 100%;
    }

    /* Social icons */
    .roblox-social-icon {
      width: 50px;
      height: 50px;
      border: 4px solid #000;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 4px 4px 0 #000;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .roblox-social-icon--orange { background: linear-gradient(45deg, #EF5B1D, #C46002); }
    .roblox-social-icon--blue { background: linear-gradient(45deg, #4387E3, #551084); }
    .roblox-social-icon--purple { background: linear-gradient(45deg, #551084, #4387E3); }

    .roblox-social-icon:hover {
      transform: translateY(-4px) scale(1.1);
      box-shadow: 8px 8px 0 #000;
    }

    .roblox-social-dot {
      width: 16px;
      height: 16px;
      background: rgba(255,255,255,0.8);
      border-radius: 50%;
      box-shadow: 0 0 0 3px rgba(255,255,255,0.3);
      animation: dot-pulse 2s ease-in-out infinite;
    }

    @keyframes dot-pulse {
      0%, 100% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.2); opacity: 0.8; }
    }

    /* Floating cubes */
    .roblox-floating-cube {
      position: absolute;
      width: 20px;
      height: 20px;
      background: linear-gradient(45deg, #EF5B1D, #4387E3);
      border: 3px solid #000;
      border-radius: 4px;
      box-shadow: 4px 4px 0 #000;
      animation: cube-float 8s ease-in-out infinite;
    }

    .roblox-floating-cube::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 8px;
      height: 8px;
      background: rgba(255,255,255,0.5);
      border-radius: 50%;
    }

    @keyframes cube-float {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      25% { transform: translateY(-20px) rotate(90deg); }
      50% { transform: translateY(-10px) rotate(180deg); }
      75% { transform: translateY(-15px) rotate(270deg); }
    }

    /* Copyright */
    .roblox-footer-copyright {
      position: relative;
    }

    .roblox-footer-copyright::before {
      content: '';
      position: absolute;
      top: 50%;
      left: -20px;
      transform: translateY(-50%);
      width: 12px;
      height: 12px;
      background: linear-gradient(45deg, #EF5B1D, #4387E3);
      border: 2px solid #000;
      border-radius: 3px;
      animation: copyright-spin 4s linear infinite;
    }

    @keyframes copyright-spin {
      0% { transform: translateY(-50%) rotate(0deg); }
      100% { transform: translateY(-50%) rotate(360deg); }
    }
  </style>
  
</footer>

