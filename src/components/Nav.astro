---
import type { GetStaticPaths } from "astro";
const { siteName = "Roblox Obby Online" } = Astro.props;
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
const navDict = dict?.nav || {};
---

<nav class="w-full fixed top-0 left-0 z-50 roblox-nav flex items-center justify-between px-4 py-3" lang={locale}>
  <!-- Roblox-style background pattern -->
  <div class="absolute inset-0 -z-10 roblox-nav-pattern"></div>
  <div class="absolute inset-0 -z-10 roblox-nav-glow"></div>
  
  <!-- Enhanced logo section -->
  <a href={`/${locale}/`} class="roblox-brand-container group" aria-label={dict.siteName}>
    <div class="roblox-logo-brick">
      <img class="roblox-logo-img" src="/favicon.png" alt={dict.siteName} width="32" height="32" />
      <div class="roblox-logo-shine"></div>
      <div class="roblox-logo-studs">
        <div class="roblox-stud"></div>
        <div class="roblox-stud"></div>
        <div class="roblox-stud"></div>
        <div class="roblox-stud"></div>
      </div>
    </div>
    <div class="roblox-brand-text">
      <span class="roblox-brand-title">{dict.siteName}</span>
      <div class="roblox-brand-underline"></div>
    </div>
  </a>

  <!-- Enhanced hamburger menu -->
  <button id="hamburger-btn" 
          class="roblox-menu-btn focus:outline-none"
          aria-label="Toggle navigation menu" aria-expanded="false" aria-controls="nav-dropdown">
    <div class="roblox-menu-icon">
      <span class="roblox-bar roblox-bar-1"></span>
      <span class="roblox-bar roblox-bar-2"></span>
      <span class="roblox-bar roblox-bar-3"></span>
    </div>
    <div class="roblox-menu-glow"></div>
  </button>
  
  <!-- Enhanced dropdown menu -->
  <ul id="nav-dropdown" 
      class="hidden absolute top-full right-4 mt-4 roblox-dropdown w-60 transform opacity-0 scale-95 transition-all duration-300 ease-out"
      role="menu" aria-labelledby="hamburger-btn">
    <li><a href={`/${locale}/`} class="roblox-nav-item" role="menuitem">
      <span class="roblox-nav-text">{navDict.home || "Home"}</span>
    </a></li>
    <li><a href={`/${locale}/about/`} class="roblox-nav-item" role="menuitem">
      <span class="roblox-nav-text">{navDict.about || "About"}</span>
    </a></li>
    <li><a href={`/${locale}/privacy-policy/`} class="roblox-nav-item" role="menuitem">
      <span class="roblox-nav-text">{navDict.privacy || "Privacy Policy"}</span>
    </a></li>
    <li><a href={`/${locale}/terms-of-service/`} class="roblox-nav-item" role="menuitem">
      <span class="roblox-nav-text">{navDict.terms || "Terms of Service"}</span>
    </a></li>
  </ul>

  <!-- Floating nav decorations -->
  <div class="pointer-events-none absolute inset-0 -z-10">
    <div class="roblox-nav-particle" style="left:20%;top:50%;"></div>
    <div class="roblox-nav-particle" style="right:30%;top:30%;"></div>
  </div>
</nav>

<script is:inline>
  const hamburgerBtn = document.getElementById('hamburger-btn');
  const navDropdown = document.getElementById('nav-dropdown');

  function openMenu() {
    navDropdown.classList.remove('hidden');
    setTimeout(() => {
      navDropdown.classList.remove('opacity-0', 'scale-95');
      navDropdown.classList.add('opacity-100', 'scale-100');
    }, 10);
    hamburgerBtn.setAttribute('aria-expanded', 'true');
  }

  function closeMenu() {
    navDropdown.classList.add('opacity-0', 'scale-95');
    setTimeout(() => navDropdown.classList.add('hidden'), 200);
    hamburgerBtn.setAttribute('aria-expanded', 'false');
  }

  hamburgerBtn.addEventListener('click', (e) => {
    e.stopPropagation(); // empÃªcher fermeture instantanÃ©e
    const isHidden = navDropdown.classList.contains('hidden');
    if (isHidden) openMenu();
    else closeMenu();
  });

  // ðŸ‘‰ Fermer si on clique ailleurs dans la page
  document.addEventListener('click', (e) => {
    if (!navDropdown.contains(e.target) && !hamburgerBtn.contains(e.target)) {
      if (!navDropdown.classList.contains('hidden')) {
        closeMenu();
      }
    }
  });
</script>

<style>
  body { padding-top: 74px; }

  /* Roblox Navigation */
  .roblox-nav {
    background: linear-gradient(135deg, #4387E3, #551084);
    border-bottom: 4px solid #000;
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
    position: fixed;
    height: 70px;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
  }

  .roblox-nav-pattern {
    background-image: 
      radial-gradient(circle at 20px 20px, rgba(239, 91, 29, 0.1) 3px, transparent 4px),
      radial-gradient(circle at 60px 20px, rgba(192, 181, 177, 0.1) 3px, transparent 4px);
    background-size: 80px 80px;
    animation: nav-pattern-drift 20s linear infinite;
  }

  .roblox-nav-glow {
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    animation: nav-glow-sweep 4s ease-in-out infinite;
  }

  @keyframes nav-pattern-drift {
    0% { background-position: 0 0; }
    100% { background-position: 80px 80px; }
  }

  @keyframes nav-glow-sweep {
    0%, 100% { transform: translateX(-100%); }
    50% { transform: translateX(100%); }
  }

  /* Brand Container */
  .roblox-brand-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    position: relative;
    z-index: 10;
  }

  .roblox-logo-brick {
    position: relative;
    width: 50px;
    height: 50px;
    background: linear-gradient(45deg, #EF5B1D, #C46002);
    border: 4px solid #000;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 4px 4px 0 #000;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .roblox-logo-img {
    position: relative;
    z-index: 3;
    filter: drop-shadow(2px 2px 0 #000);
    transition: transform 0.3s ease;
  }

  .roblox-logo-shine {
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
    animation: logo-shine 3s ease-in-out infinite;
  }

  .roblox-logo-studs {
    position: absolute;
    inset: 6px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4px;
    z-index: 1;
  }

  .roblox-stud {
    width: 8px;
    height: 8px;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    border: 1px solid rgba(255,255,255,0.1);
  }

  .roblox-brand-container:hover .roblox-logo-brick {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 6px 6px 0 #000;
  }

  .roblox-brand-container:hover .roblox-logo-img {
    transform: rotate(5deg);
  }

  .roblox-brand-container:hover .roblox-logo-shine {
    opacity: 1;
  }

  @keyframes logo-shine {
    0%, 100% { opacity: 0; }
    50% { opacity: 0.6; }
  }

  .roblox-brand-text {
    position: relative;
  }

  .roblox-brand-title {
    font-size: 1.25rem;
    font-weight: 900;
    color: white;
    text-shadow: 3px 3px 0 #000;
    letter-spacing: 1px;
    display: block;
    transition: all 0.3s ease;
  }

  .roblox-brand-underline {
    height: 3px;
    background: linear-gradient(90deg, #EF5B1D, #C46002);
    border-radius: 2px;
    margin-top: 2px;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .roblox-brand-container:hover .roblox-brand-underline {
    transform: scaleX(1);
  }

  /* Menu Button */
  .roblox-menu-btn {
    position: relative;
    width: 50px;
    height: 50px;
    background: linear-gradient(45deg, #EF5B1D, #C46002);
    border: 4px solid #000;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 4px 4px 0 #000;
    overflow: hidden;
  }

  .roblox-menu-icon {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 4px;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .roblox-bar {
    width: 20px;
    height: 3px;
    background: white;
    border-radius: 2px;
    transition: all 0.3s ease;
    box-shadow: 1px 1px 0 #000;
  }

  .roblox-menu-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle, rgba(255,255,255,0.3), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .roblox-menu-btn:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 6px 6px 0 #000;
  }

  .roblox-menu-btn:hover .roblox-menu-glow {
    opacity: 1;
  }

  .roblox-menu-btn:active {
    transform: translateY(0) scale(0.95);
    box-shadow: 2px 2px 0 #000;
  }

  /* Dropdown Menu */
  .roblox-dropdown {
    background: linear-gradient(135deg, #ffffff, #f8f9fa);
    border: 4px solid #000;
    border-radius: 16px;
    box-shadow: 8px 8px 0 #000, 0 20px 40px rgba(0,0,0,0.2);
    overflow: hidden;
    backdrop-filter: blur(10px);
    padding: 0.5rem 0;
  }

  /* Navigation Items */
  .roblox-nav-item {
    display: block;
    padding: 1rem 1.5rem;
    text-decoration: none;
    color: #000;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
    border-bottom: 1px solid rgba(0,0,0,0.1);
  }

  .roblox-nav-item:last-child {
    border-bottom: none;
  }

  .roblox-nav-text {
    font-size: 1rem;
    display: block;
  }

  .roblox-nav-item:hover {
    background: linear-gradient(45deg, #551084, #4387E3);
    color: white;
    transform: translateX(4px);
    text-shadow: 1px 1px 0 #000;
  }

  /* Floating particles */
  .roblox-nav-particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: linear-gradient(45deg, #EF5B1D, #4387E3);
    border: 1px solid #000;
    border-radius: 50%;
    animation: particle-float 4s ease-in-out infinite;
  }

  @keyframes particle-float {
    0%, 100% { transform: translateY(0) scale(1); opacity: 0.6; }
    50% { transform: translateY(-10px) scale(1.2); opacity: 1; }
  }
</style>
