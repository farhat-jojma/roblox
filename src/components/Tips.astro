---
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export interface Props {}
const {} = Astro.props;

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
---

<section id="tips" class="w-full py-16 bg-gradient-to-br from-[#EF5B1D] via-[#C46002] to-[#EF5B1D] text-white relative overflow-hidden" lang={locale}>
  <div class="absolute inset-0 -z-10 roblox-tips-pattern animate-spin-slow"></div>
  <div class="max-w-6xl mx-auto px-4 relative z-10">
    <div class="inline-block px-5 py-3 mb-6 bg-[#551084] text-white border-4 border-black shadow-[6px_6px_0_#000] transform rotate-1 roblox-tips-badge">
      <span class="text-sm font-black tracking-widest uppercase">{dict.tips}</span>
    </div>
    <h2 class="text-4xl sm:text-5xl font-black mb-6 roblox-tips-title">{dict.tipsTitle}</h2>
    <p class="text-white text-lg mb-12 max-w-4xl font-semibold leading-relaxed">{dict.tipsIntro}</p>

    <div class="grid md:grid-cols-2 gap-8">
      <div class="roblox-tip-card roblox-tip-card--1">
        <div class="roblox-tip-icon roblox-tip-icon--orange"></div>
        <div class="roblox-tip-content">
          <h3 class="font-black text-xl mb-3 text-black">{dict.tipsCard1Title}</h3>
          <p class="text-gray-800 font-medium leading-relaxed">{dict.tipsCard1Text}</p>
        </div>
        <div class="roblox-tip-sparkle roblox-tip-sparkle--1"></div>
        <div class="roblox-tip-sparkle roblox-tip-sparkle--2"></div>
      </div>
      <div class="roblox-tip-card roblox-tip-card--2">
        <div class="roblox-tip-icon roblox-tip-icon--blue"></div>
        <div class="roblox-tip-content">
          <h3 class="font-black text-xl mb-3 text-black">{dict.tipsCard2Title}</h3>
          <p class="text-gray-800 font-medium leading-relaxed">{dict.tipsCard2Text}</p>
        </div>
        <div class="roblox-tip-sparkle roblox-tip-sparkle--1"></div>
        <div class="roblox-tip-sparkle roblox-tip-sparkle--2"></div>
      </div>
      <div class="roblox-tip-card roblox-tip-card--3">
        <div class="roblox-tip-icon roblox-tip-icon--purple"></div>
        <div class="roblox-tip-content">
          <h3 class="font-black text-xl mb-3 text-black">{dict.tipsCard3Title}</h3>
          <p class="text-gray-800 font-medium leading-relaxed">{dict.tipsCard3Text}</p>
        </div>
        <div class="roblox-tip-sparkle roblox-tip-sparkle--1"></div>
        <div class="roblox-tip-sparkle roblox-tip-sparkle--2"></div>
      </div>
      <div class="roblox-tip-card roblox-tip-card--4">
        <div class="roblox-tip-icon roblox-tip-icon--gray"></div>
        <div class="roblox-tip-content">
          <h3 class="font-black text-xl mb-3 text-black">{dict.tipsCard4Title}</h3>
          <p class="text-gray-800 font-medium leading-relaxed">{dict.tipsCard4Text}</p>
        </div>
        <div class="roblox-tip-sparkle roblox-tip-sparkle--1"></div>
        <div class="roblox-tip-sparkle roblox-tip-sparkle--2"></div>
      </div>
    </div>

    <div class="mt-12 text-center">
      <button onclick="document.getElementById('game').scrollIntoView({ behavior: 'smooth' })" 
        class="roblox-tips-btn">
        <span class="roblox-tips-btn__text">{dict.tipsCTA}</span>
        <div class="roblox-tips-btn__glow"></div>
      </button>
    </div>
  </div>

  <style>
    .roblox-tips-title {
      text-shadow: 4px 4px 0 #000, -2px -2px 0 #000, 2px -2px 0 #000, -2px 2px 0 #000;
      letter-spacing: 2px;
      color: white;
    }

    .roblox-tips-badge {
      border-radius: 12px;
      position: relative;
      overflow: hidden;
    }
    .roblox-tips-badge::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
      animation: badge-shine 2.5s infinite;
    }

    @keyframes badge-shine {
      0% { left: -100%; }
      100% { left: 100%; }
    }

    /* Tips background pattern */
    .roblox-tips-pattern {
      background-image: 
        radial-gradient(circle at 40px 40px, rgba(67, 135, 227, 0.15) 5px, transparent 6px),
        radial-gradient(circle at 120px 40px, rgba(85, 16, 132, 0.15) 5px, transparent 6px),
        radial-gradient(circle at 80px 120px, rgba(192, 181, 177, 0.15) 5px, transparent 6px);
      background-size: 160px 160px;
    }

    .animate-spin-slow {
      animation: spin-slow 60s linear infinite;
    }

    @keyframes spin-slow {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Tip cards */
    .roblox-tip-card {
      position: relative;
      background: linear-gradient(135deg, #ffffff, #f8f9fa);
      border: 4px solid #000;
      border-radius: 20px;
      padding: 2.5rem;
      overflow: hidden;
      transform: translateY(0) rotate(0deg);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 8px 8px 0 #000;
    }

    .roblox-tip-card--1 { transform: rotate(-2deg); }
    .roblox-tip-card--2 { transform: rotate(1deg); }
    .roblox-tip-card--3 { transform: rotate(-1deg); }
    .roblox-tip-card--4 { transform: rotate(2deg); }

    .roblox-tip-card:hover {
      transform: translateY(-12px) rotate(0deg) scale(1.05);
      box-shadow: 16px 16px 0 #000, 0 25px 50px rgba(0,0,0,0.2);
    }

    .roblox-tip-icon {
      position: absolute;
      top: -20px;
      right: -20px;
      width: 60px;
      height: 60px;
      border: 4px solid #000;
      border-radius: 50%;
      box-shadow: 6px 6px 0 #000;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 2;
    }

    .roblox-tip-icon::before {
      content: '';
      width: 20px;
      height: 20px;
      background: rgba(255,255,255,0.5);
      border-radius: 50%;
      box-shadow: 0 0 0 3px rgba(255,255,255,0.3);
    }

    .roblox-tip-icon--orange { background: linear-gradient(45deg, #EF5B1D, #C46002); }
    .roblox-tip-icon--blue { background: linear-gradient(45deg, #4387E3, #551084); }
    .roblox-tip-icon--purple { background: linear-gradient(45deg, #551084, #4387E3); }
    .roblox-tip-icon--gray { background: linear-gradient(45deg, #C0B5B1, #B6ABA8); }

    .roblox-tip-content {
      position: relative;
      z-index: 1;
    }

    .roblox-tip-sparkle {
      position: absolute;
      width: 8px;
      height: 8px;
      background: linear-gradient(45deg, #EF5B1D, #4387E3);
      border: 2px solid #000;
      border-radius: 50%;
      animation: sparkle 2s infinite ease-in-out;
    }

    .roblox-tip-sparkle--1 {
      top: 20px;
      left: 20px;
      animation-delay: 0s;
    }

    .roblox-tip-sparkle--2 {
      bottom: 30px;
      right: 80px;
      animation-delay: 1s;
    }

    @keyframes sparkle {
      0%, 100% { opacity: 1; transform: scale(1); }
      50% { opacity: 0.3; transform: scale(1.5); }
    }

    /* Tips button */
    .roblox-tips-btn {
      position: relative;
      display: inline-block;
      padding: 1.5rem 3rem;
      background: linear-gradient(45deg, #4387E3, #551084);
      color: white;
      border: 4px solid #000;
      border-radius: 20px;
      font-weight: 900;
      font-size: 1.2rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 10px 10px 0 #000;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow: hidden;
      transform: translateY(0);
    }

    .roblox-tips-btn__text {
      position: relative;
      z-index: 2;
    }

    .roblox-tips-btn__glow {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
      transition: left 0.6s ease;
      z-index: 1;
    }

    .roblox-tips-btn:hover {
      transform: translateY(-8px) scale(1.05);
      box-shadow: 15px 15px 0 #000, 0 25px 50px rgba(67, 135, 227, 0.4);
    }

    .roblox-tips-btn:hover .roblox-tips-btn__glow {
      left: 100%;
    }
  </style>
</section>
