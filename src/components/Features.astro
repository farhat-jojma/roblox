---
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export interface Props {}
const {} = Astro.props;

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
---

<section id="features" class="relative w-full py-16 sm:py-20 overflow-hidden bg-gradient-to-br from-[#551084] via-[#4387E3] to-[#551084] text-white" lang={locale}>
  <div class="absolute inset-0 -z-10 roblox-features-pattern animate-wave"></div>
  <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-12 items-center relative z-10">
    <div>
      <div class="inline-block px-5 py-3 mb-6 bg-[#EF5B1D] text-white border-4 border-black shadow-[6px_6px_0_#000] transform -rotate-1 roblox-features-badge">
        <span class="text-sm font-black tracking-widest uppercase">{dict.features}</span>
      </div>
      <h2 class="text-4xl sm:text-5xl font-black mb-6 roblox-features-title">{dict.featuresTitle}</h2>
      <p class="text-white text-lg mb-8 font-semibold leading-relaxed">{dict.featuresSubtitle}</p>

      <div class="space-y-6">
        <div class="roblox-feature-item roblox-feature-item--1">
          <div class="roblox-feature-icon roblox-feature-icon--orange"></div>
          <div class="roblox-feature-content">
            <h3 class="font-black text-lg text-white mb-2">{dict.featuresCard1Title}</h3>
            <p class="text-gray-100 font-medium">{dict.featuresCard1Text}</p>
          </div>
        </div>
        <div class="roblox-feature-item roblox-feature-item--2">
          <div class="roblox-feature-icon roblox-feature-icon--purple"></div>
          <div class="roblox-feature-content">
            <h3 class="font-black text-lg text-white mb-2">{dict.featuresCard2Title}</h3>
            <p class="text-gray-100 font-medium">{dict.featuresCard2Text}</p>
          </div>
        </div>
        <div class="roblox-feature-item roblox-feature-item--3">
          <div class="roblox-feature-icon roblox-feature-icon--blue"></div>
          <div class="roblox-feature-content">
            <h3 class="font-black text-lg text-white mb-2">{dict.featuresCard3Title}</h3>
            <p class="text-gray-100 font-medium">{dict.featuresCard3Text}</p>
          </div>
        </div>
      </div>

      <div class="mt-10 flex flex-col sm:flex-row items-center gap-4">
        <button onclick="document.getElementById('game').scrollIntoView({ behavior: 'smooth' })" 
          class="roblox-features-btn roblox-features-btn--primary">
          <span class="roblox-features-btn__text">{dict.featuresCTA}</span>
          <div class="roblox-features-btn__glow"></div>
      </button>
        <button onclick="document.getElementById('tips').scrollIntoView({ behavior: 'smooth' })" 
          class="roblox-features-btn roblox-features-btn--secondary">
          <span class="roblox-features-btn__text">{dict.featuresCTA2}</span>
          <div class="roblox-features-btn__glow"></div>
        </button>
      </div>
    </div>

    <div class="relative">
      <div class="roblox-brick-tower">
        <div class="roblox-tower-brick roblox-tower-brick--orange" style="animation-delay: 0s;"></div>
        <div class="roblox-tower-brick roblox-tower-brick--blue" style="animation-delay: 0.3s;"></div>
        <div class="roblox-tower-brick roblox-tower-brick--purple" style="animation-delay: 0.6s;"></div>
        <div class="roblox-tower-brick roblox-tower-brick--gray" style="animation-delay: 0.9s;"></div>
        <div class="roblox-tower-brick roblox-tower-brick--orange" style="animation-delay: 1.2s;"></div>
        <div class="roblox-tower-brick roblox-tower-brick--blue" style="animation-delay: 1.5s;"></div>
      </div>
      <div class="absolute inset-0 pointer-events-none">
        <div class="roblox-floating-element" style="top:15%;left:10%;"></div>
        <div class="roblox-floating-element" style="bottom:20%;right:15%;"></div>
        <div class="roblox-floating-element" style="top:60%;right:5%;"></div>
      </div>
    </div>
  </div>

  <style>
    .roblox-features-title {
      text-shadow: 4px 4px 0 #000, -2px -2px 0 #000, 2px -2px 0 #000, -2px 2px 0 #000;
      letter-spacing: 2px;
      color: white;
    }

    .roblox-features-badge {
      border-radius: 12px;
      position: relative;
      overflow: hidden;
    }
    .roblox-features-badge::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
      animation: badge-shine 3.5s infinite;
    }

    @keyframes badge-shine {
      0% { left: -100%; }
      100% { left: 100%; }
    }

    /* Features background pattern */
    .roblox-features-pattern {
      background-image: 
        radial-gradient(circle at 50px 50px, rgba(239, 91, 29, 0.1) 6px, transparent 7px),
        radial-gradient(circle at 150px 50px, rgba(192, 181, 177, 0.1) 6px, transparent 7px),
        radial-gradient(circle at 100px 150px, rgba(182, 171, 168, 0.1) 6px, transparent 7px);
      background-size: 200px 200px;
    }

    .animate-wave {
      animation: wave 30s ease-in-out infinite;
    }

    @keyframes wave {
      0%, 100% { transform: translateX(0) translateY(0); }
      25% { transform: translateX(-20px) translateY(-10px); }
      50% { transform: translateX(0) translateY(-20px); }
      75% { transform: translateX(20px) translateY(-10px); }
    }

    /* Feature items */
    .roblox-feature-item {
      display: flex;
      align-items: flex-start;
      gap: 1.5rem;
      padding: 1.5rem;
      background: linear-gradient(135deg, rgba(0,0,0,0.3), rgba(0,0,0,0.1));
      border: 3px solid #000;
      border-radius: 16px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .roblox-feature-item--1 { box-shadow: 6px 6px 0 #EF5B1D; }
    .roblox-feature-item--2 { box-shadow: 6px 6px 0 #551084; }
    .roblox-feature-item--3 { box-shadow: 6px 6px 0 #4387E3; }

    .roblox-feature-item:hover {
      transform: translateX(8px) translateY(-4px);
    }

    .roblox-feature-item--1:hover { box-shadow: 10px 10px 0 #EF5B1D, 0 15px 30px rgba(239, 91, 29, 0.2); }
    .roblox-feature-item--2:hover { box-shadow: 10px 10px 0 #551084, 0 15px 30px rgba(85, 16, 132, 0.2); }
    .roblox-feature-item--3:hover { box-shadow: 10px 10px 0 #4387E3, 0 15px 30px rgba(67, 135, 227, 0.2); }

    .roblox-feature-icon {
      width: 50px;
      height: 50px;
      border: 4px solid #000;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 4px 4px 0 #000;
      flex-shrink: 0;
      position: relative;
    }

    .roblox-feature-icon::before {
      content: '';
      width: 16px;
      height: 16px;
      background: rgba(255,255,255,0.4);
      border-radius: 50%;
      box-shadow: 0 0 0 2px rgba(255,255,255,0.2);
    }

    .roblox-feature-icon--orange { background: linear-gradient(45deg, #EF5B1D, #C46002); }
    .roblox-feature-icon--purple { background: linear-gradient(45deg, #551084, #4387E3); }
    .roblox-feature-icon--blue { background: linear-gradient(45deg, #4387E3, #551084); }

    .roblox-feature-content {
      flex: 1;
    }

    /* Feature buttons */
    .roblox-features-btn {
      position: relative;
      display: inline-block;
      padding: 1.25rem 2.5rem;
      border: 4px solid #000;
      border-radius: 16px;
      font-weight: 900;
      font-size: 1.1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow: hidden;
      transform: translateY(0);
    }

    .roblox-features-btn--primary {
      background: linear-gradient(45deg, #EF5B1D, #C46002);
      color: white;
      box-shadow: 8px 8px 0 #000;
    }

    .roblox-features-btn--secondary {
      background: linear-gradient(45deg, #C0B5B1, #B6ABA8);
      color: black;
      box-shadow: 8px 8px 0 #000;
    }

    .roblox-features-btn__text {
      position: relative;
      z-index: 2;
    }

    .roblox-features-btn__glow {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
      transition: left 0.6s ease;
      z-index: 1;
    }

    .roblox-features-btn:hover {
      transform: translateY(-6px) scale(1.05);
    }

    .roblox-features-btn--primary:hover {
      box-shadow: 12px 12px 0 #000, 0 20px 40px rgba(239, 91, 29, 0.4);
    }

    .roblox-features-btn--secondary:hover {
      box-shadow: 12px 12px 0 #000, 0 20px 40px rgba(192, 181, 177, 0.4);
    }

    .roblox-features-btn:hover .roblox-features-btn__glow {
      left: 100%;
    }

    /* Brick tower */
    .roblox-brick-tower {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      max-width: 300px;
      margin: 0 auto;
    }

    .roblox-tower-brick {
      width: 80px;
      height: 50px;
      border: 4px solid #000;
      border-radius: 8px;
      position: relative;
      box-shadow: 6px 6px 0 #000;
      animation: brick-stack 4s ease-in-out infinite;
    }

    .roblox-tower-brick::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 25%;
      transform: translateY(-50%);
      width: 12px;
      height: 12px;
      background: rgba(255,255,255,0.3);
      border-radius: 50%;
      box-shadow: 20px 0 0 rgba(255,255,255,0.3);
    }

    .roblox-tower-brick--orange { background: linear-gradient(135deg, #EF5B1D, #C46002); }
    .roblox-tower-brick--blue { background: linear-gradient(135deg, #4387E3, #551084); }
    .roblox-tower-brick--purple { background: linear-gradient(135deg, #551084, #4387E3); }
    .roblox-tower-brick--gray { background: linear-gradient(135deg, #C0B5B1, #B6ABA8); }

    @keyframes brick-stack {
      0%, 100% { transform: translateX(0) rotate(0deg); }
      25% { transform: translateX(-5px) rotate(-1deg); }
      50% { transform: translateX(0) rotate(0deg); }
      75% { transform: translateX(5px) rotate(1deg); }
    }

    .roblox-floating-element {
      position: absolute;
      width: 12px;
      height: 12px;
      background: linear-gradient(45deg, #EF5B1D, #4387E3);
      border: 3px solid #000;
      border-radius: 3px;
      box-shadow: 3px 3px 0 #000;
      animation: float-around 6s ease-in-out infinite;
    }

    @keyframes float-around {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      33% { transform: translateY(-15px) rotate(120deg); }
      66% { transform: translateY(-8px) rotate(240deg); }
    }
  </style>
</section>
