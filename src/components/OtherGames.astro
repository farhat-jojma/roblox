---
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export interface Props {}
const {} = Astro.props;

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale =resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
---
<div class="h-16"></div>
<section id="other-games" class="relative w-full py-16 sm:py-20 overflow-hidden bg-white text-white" lang={locale}>
  <div class="absolute inset-0 -z-10 roblox-pattern animate-float"></div>
  <div class="max-w-6xl mx-auto px-4">
    <div class="inline-block px-4 py-2 mb-6 bg-[#551084] text-white border-4 border-black shadow-[6px_6px_0_#000] transform -rotate-1">
      <span class="text-sm font-bold tracking-widest uppercase">{dict.otherGames}</span>
    </div>
    <h2 class="text-4xl sm:text-5xl font-black mb-12 roblox-title text-black">{dict.otherGamesTitle}</h2>

    <div class="grid md:grid-cols-3 gap-8">
      <a href={`https://freecellio.com/`} target="_blank" rel="noopener noreferrer" class="group block roblox-game-card roblox-game-card--blue">
        <div class="roblox-game-card__glow"></div>
        <div class="roblox-game-card__header">
          <div class="roblox-brick roblox-brick--blue"></div>
          <h3 class="font-black text-xl text-white">{dict.otherGamesCard1Title}</h3>
        </div>
        <p class="text-gray-100 text-sm leading-relaxed">{dict.otherGamesCard1Text}</p>
        <div class="roblox-tags">
          <span class="roblox-tag roblox-tag--orange">{dict.card}</span>
          <span class="roblox-tag roblox-tag--purple">{dict.classic}</span>
        </div>
      </a>
      <a href={`https://www.gamesonlinegratis.com/${locale}/game/super-pix/`} target="_blank" rel="noopener noreferrer" class="group block roblox-game-card roblox-game-card--orange">
        <div class="roblox-game-card__glow"></div>
        <div class="roblox-game-card__header">
          <div class="roblox-brick roblox-brick--orange"></div>
          <h3 class="font-black text-xl text-white">{dict.otherGamesCard2Title}</h3>
        </div>
        <p class="text-gray-100 text-sm leading-relaxed">{dict.otherGamesCard2Text}</p>
        <div class="roblox-tags">
          <span class="roblox-tag roblox-tag--blue">{dict.arcade}</span>
          <span class="roblox-tag roblox-tag--purple">{dict.retros}</span>
        </div>
      </a>
      <a href={`https://www.gamesonlinegratis.com/${locale}/game/fruit-party/`} target="_blank" rel="noopener noreferrer" class="group block roblox-game-card roblox-game-card--purple">
        <div class="roblox-game-card__glow"></div>
        <div class="roblox-game-card__header">
          <div class="roblox-brick roblox-brick--purple"></div>
          <h3 class="font-black text-xl text-white">{dict.otherGamesCard3Title}</h3>
        </div>
        <p class="text-gray-100 text-sm leading-relaxed">{dict.otherGamesCard3Text}</p>
        <div class="roblox-tags">
          <span class="roblox-tag roblox-tag--orange">{dict.puzzle}</span>
          <span class="roblox-tag roblox-tag--blue">{dict.casual}</span>
        </div>
      </a>
    </div>

    <div class="mt-12 text-center">
      <button onclick="document.getElementById('game').scrollIntoView({ behavior: 'smooth' })" 
        class="roblox-mega-btn">
        <span class="roblox-mega-btn__text">{dict.otherGamesCTA}</span>
        <div class="roblox-mega-btn__shine"></div>
      </button>
    </div>
  </div>

  <div class="pointer-events-none absolute inset-0 -z-10">
    <span class="pix-coin" style="top:15%;left:12%"></span>
    <span class="pix-coin" style="top:28%;right:16%"></span>
    <span class="pix-coin" style="bottom:20%;left:20%"></span>
    <span class="pix-coin" style="bottom:10%;right:18%"></span>
  </div>

  <style>
    .roblox-title { 
      text-shadow: 4px 4px 0 #000, -2px -2px 0 #000, 2px -2px 0 #000, -2px 2px 0 #000; 
      letter-spacing: 2px;
      background: linear-gradient(45deg, #EF5B1D, #C46002, #EF5B1D);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    /* Roblox brick pattern background */
    .roblox-pattern {
      background-image: 
        radial-gradient(circle at 20px 20px, rgba(255,255,255,0.1) 3px, transparent 4px),
        radial-gradient(circle at 60px 20px, rgba(255,255,255,0.1) 3px, transparent 4px),
        radial-gradient(circle at 40px 60px, rgba(255,255,255,0.1) 3px, transparent 4px);
      background-size: 80px 80px;
      opacity: 0.3;
    }
    .animate-float { animation: float 20s ease-in-out infinite; }
    @keyframes float { 0%, 100% { transform: translateY(0px); } 50% { transform: translateY(-10px); } }

    /* Game cards with your color palette */
    .roblox-game-card {
      position: relative;
      padding: 2rem;
      border: 4px solid #000;
      border-radius: 16px;
      overflow: hidden;
      transform: translateY(0) scale(1);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      background: linear-gradient(135deg, rgba(0,0,0,0.8), rgba(0,0,0,0.6));
    }
    
    .roblox-game-card--blue { 
      box-shadow: 8px 8px 0 #4387E3, inset 0 0 0 2px rgba(67, 135, 227, 0.3);
      background: linear-gradient(135deg, #4387E3, #551084);
    }
    .roblox-game-card--orange { 
      box-shadow: 8px 8px 0 #EF5B1D, inset 0 0 0 2px rgba(239, 91, 29, 0.3);
      background: linear-gradient(135deg, #EF5B1D, #C46002);
    }
    .roblox-game-card--purple { 
      box-shadow: 8px 8px 0 #551084, inset 0 0 0 2px rgba(85, 16, 132, 0.3);
      background: linear-gradient(135deg, #551084, #4387E3);
    }
    
    .roblox-game-card:hover { 
      transform: translateY(-8px) scale(1.02); 
    }
    .roblox-game-card--blue:hover { box-shadow: 12px 12px 0 #4387E3, 0 20px 40px rgba(67, 135, 227, 0.3); }
    .roblox-game-card--orange:hover { box-shadow: 12px 12px 0 #EF5B1D, 0 20px 40px rgba(239, 91, 29, 0.3); }
    .roblox-game-card--purple:hover { box-shadow: 12px 12px 0 #551084, 0 20px 40px rgba(85, 16, 132, 0.3); }
    
    .roblox-game-card__glow {
      position: absolute;
      top: -2px;
      left: -2px;
      right: -2px;
      bottom: -2px;
      background: linear-gradient(45deg, rgba(255,255,255,0.1), transparent, rgba(255,255,255,0.1));
      border-radius: 18px;
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: -1;
    }
    .roblox-game-card:hover .roblox-game-card__glow { opacity: 1; }
    
    .roblox-game-card__header { 
      display: flex; 
      align-items: center; 
      gap: 1rem; 
      margin-bottom: 1rem; 
    }
    
    /* Roblox-style bricks */
    .roblox-brick {
      width: 24px;
      height: 24px;
      border: 3px solid #000;
      border-radius: 4px;
      position: relative;
      box-shadow: 3px 3px 0 #000;
    }
    .roblox-brick::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 8px;
      height: 8px;
      background: rgba(255,255,255,0.3);
      border-radius: 50%;
    }
    .roblox-brick--blue { background: #4387E3; }
    .roblox-brick--orange { background: #EF5B1D; }
    .roblox-brick--purple { background: #551084; }

    /* Tags */
    .roblox-tags { 
      margin-top: 1rem; 
      display: flex; 
      flex-wrap: wrap; 
      gap: 0.5rem; 
    }
    .roblox-tag { 
      font-size: 0.75rem; 
      padding: 0.25rem 0.75rem; 
      border: 2px solid #000; 
      border-radius: 20px;
      text-transform: uppercase; 
      letter-spacing: 0.5px; 
      font-weight: 800;
      box-shadow: 2px 2px 0 #000;
    }
    .roblox-tag--orange { background: #EF5B1D; color: white; }
    .roblox-tag--blue { background: #4387E3; color: white; }
    .roblox-tag--purple { background: #551084; color: white; }

    /* Mega button */
    .roblox-mega-btn {
      position: relative;
      display: inline-block;
      padding: 1.25rem 2.5rem;
      background: linear-gradient(45deg, #EF5B1D, #C46002);
      color: white;
      border: 4px solid #000;
      border-radius: 12px;
      font-weight: 900;
      font-size: 1.1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      box-shadow: 8px 8px 0 #000;
      transition: all 0.3s ease;
      overflow: hidden;
    }
    
    .roblox-mega-btn__text {
      position: relative;
      z-index: 2;
    }
    
    .roblox-mega-btn__shine {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
      transition: left 0.5s ease;
    }
    
    .roblox-mega-btn:hover {
      transform: translateY(-4px);
      box-shadow: 12px 12px 0 #000, 0 15px 30px rgba(239, 91, 29, 0.4);
    }
    .roblox-mega-btn:hover .roblox-mega-btn__shine {
      left: 100%;
    }

    /* Floating decorations */
    .pix-coin { 
      position: absolute; 
      width: 16px; 
      height: 16px; 
      background: linear-gradient(45deg, #EF5B1D, #C46002); 
      border: 3px solid #000; 
      border-radius: 4px;
      box-shadow: 3px 3px 0 #000; 
      animation: bob 3s ease-in-out infinite; 
    }
    .pix-coin::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 6px;
      height: 6px;
      background: rgba(255,255,255,0.6);
      border-radius: 50%;
    }
    @keyframes bob { 
      0%, 100% { transform: translateY(0) rotate(0deg); } 
      50% { transform: translateY(-12px) rotate(10deg); } 
    }
  </style>
</section>

