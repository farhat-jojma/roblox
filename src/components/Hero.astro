---
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export interface Props {}
const {} = Astro.props;

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale =resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
---

<section class="w-full relative overflow-hidden py-20 sm:py-24 bg-gradient-to-br from-[#B6ABA8] via-[#C0B5B1] to-[#B6ABA8] text-white" lang={locale}>
  <div class="absolute inset-0 -z-10 roblox-hero-pattern animate-pulse-slow" aria-hidden="true"></div>
  <div class="absolute inset-0 -z-10 roblox-grid-overlay"></div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 text-center relative z-10">
    <div class="inline-block px-6 py-3 mb-8 bg-[#551084] text-white border-4 border-black roblox-badge transform rotate-2 shadow-[8px_8px_0_#000]">
      <span class="text-sm font-black tracking-widest uppercase">{dict.heroSubtitle1}</span>
    </div>

    <h1 class="text-5xl sm:text-7xl font-black leading-tight mb-6 roblox-hero-title">
      <span class="block text-black">{dict.heroTitle}</span>
      <span class="block roblox-gradient-text">{dict.heroTitle2}</span>
    </h1>
    <p class="max-w-3xl mx-auto text-black text-lg sm:text-xl mb-12 font-bold leading-relaxed">
      {dict.heroSubtitle}
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-16">
      <button onclick="document.getElementById('game').scrollIntoView({ behavior: 'smooth' })" 
        class="roblox-hero-btn roblox-hero-btn--primary">
        <span class="roblox-hero-btn__text">{dict.heroCTA}</span>
        <div class="roblox-hero-btn__glow"></div>
      </button>
      <button onclick="document.getElementById('how-to-play').scrollIntoView({ behavior: 'smooth' })" 
        class="roblox-hero-btn roblox-hero-btn--secondary">
        <span class="roblox-hero-btn__text">{dict.heroCTA2}</span>
        <div class="roblox-hero-btn__glow"></div>
      </button>
    </div>

    <div class="relative flex items-center justify-center">
      <div class="roblox-brick-showcase">
        <div class="roblox-showcase-brick roblox-showcase-brick--orange" style="animation-delay: 0s;"></div>
        <div class="roblox-showcase-brick roblox-showcase-brick--blue" style="animation-delay: 0.2s;"></div>
        <div class="roblox-showcase-brick roblox-showcase-brick--purple" style="animation-delay: 0.4s;"></div>
        <div class="roblox-showcase-brick roblox-showcase-brick--orange" style="animation-delay: 0.6s;"></div>
        <div class="roblox-showcase-brick roblox-showcase-brick--blue" style="animation-delay: 0.8s;"></div>
        <div class="roblox-showcase-brick roblox-showcase-brick--purple hidden sm:block" style="animation-delay: 1s;"></div>
        <div class="roblox-showcase-brick roblox-showcase-brick--orange hidden sm:block" style="animation-delay: 1.2s;"></div>
        <div class="roblox-showcase-brick roblox-showcase-brick--blue hidden sm:block" style="animation-delay: 1.4s;"></div>
      </div>
    </div>
  </div>

  <div class="pointer-events-none absolute inset-0 -z-10">
    <span class="pixel-star" style="top:10%;left:15%"></span>
    <span class="pixel-star" style="top:25%;right:12%"></span>
    <span class="pixel-star" style="bottom:20%;left:20%"></span>
    <span class="pixel-star" style="bottom:12%;right:18%"></span>
  </div>
</section>

<style>
  .roblox-hero-title {
    text-shadow: 6px 6px 0 #000, -3px -3px 0 #000, 3px -3px 0 #000, -3px 3px 0 #000;
    letter-spacing: 3px;
  }

  .roblox-gradient-text {
    background: linear-gradient(45deg, #EF5B1D, #C46002, #4387E3, #551084);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 300% 300%;
    animation: gradient-shift 3s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .roblox-badge {
    border-radius: 12px;
    position: relative;
    overflow: hidden;
  }
  .roblox-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    animation: badge-shine 2s infinite;
  }

  @keyframes badge-shine {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  /* Hero background patterns */
  .roblox-hero-pattern {
    background-image: 
      radial-gradient(circle at 25px 25px, rgba(239, 91, 29, 0.1) 4px, transparent 5px),
      radial-gradient(circle at 75px 25px, rgba(67, 135, 227, 0.1) 4px, transparent 5px),
      radial-gradient(circle at 50px 75px, rgba(85, 16, 132, 0.1) 4px, transparent 5px);
    background-size: 100px 100px;
  }

  .roblox-grid-overlay {
    background-image: 
      linear-gradient(rgba(0,0,0,0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    opacity: 0.3;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  @keyframes pulse-slow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.5; }
  }

  /* Hero buttons */
  .roblox-hero-btn {
    position: relative;
    display: inline-block;
    padding: 1.25rem 2.5rem;
    border: 4px solid #000;
    border-radius: 16px;
    font-weight: 900;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    transform: translateY(0);
  }

  .roblox-hero-btn--primary {
    background: linear-gradient(45deg, #EF5B1D, #C46002);
    color: white;
    box-shadow: 8px 8px 0 #000;
  }

  .roblox-hero-btn--secondary {
    background: linear-gradient(45deg, #4387E3, #551084);
    color: white;
    box-shadow: 8px 8px 0 #000;
  }

  .roblox-hero-btn__text {
    position: relative;
    z-index: 2;
  }

  .roblox-hero-btn__glow {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.6s ease;
    z-index: 1;
  }

  .roblox-hero-btn:hover {
    transform: translateY(-6px) scale(1.05);
  }

  .roblox-hero-btn--primary:hover {
    box-shadow: 12px 12px 0 #000, 0 20px 40px rgba(239, 91, 29, 0.4);
  }

  .roblox-hero-btn--secondary:hover {
    box-shadow: 12px 12px 0 #000, 0 20px 40px rgba(67, 135, 227, 0.4);
  }

  .roblox-hero-btn:hover .roblox-hero-btn__glow {
    left: 100%;
  }

  /* Brick showcase */
  .roblox-brick-showcase {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .roblox-showcase-brick {
    width: 40px;
    height: 40px;
    border: 4px solid #000;
    border-radius: 8px;
    position: relative;
    box-shadow: 4px 4px 0 #000;
    animation: brick-float 3s ease-in-out infinite;
  }

  .roblox-showcase-brick::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 12px;
    height: 12px;
    background: rgba(255,255,255,0.4);
    border-radius: 50%;
    box-shadow: 0 0 0 2px rgba(255,255,255,0.2);
  }

  .roblox-showcase-brick--orange { background: linear-gradient(135deg, #EF5B1D, #C46002); }
  .roblox-showcase-brick--blue { background: linear-gradient(135deg, #4387E3, #551084); }
  .roblox-showcase-brick--purple { background: linear-gradient(135deg, #551084, #4387E3); }

  @keyframes brick-float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(5deg); }
  }

  .pixel-star {
    position: absolute;
    width: 12px;
    height: 12px;
    background: linear-gradient(45deg, #EF5B1D, #4387E3);
    border: 3px solid #000;
    border-radius: 3px;
    box-shadow: 3px 3px 0 #000;
    animation: star-twinkle 2s infinite ease-in-out;
  }

  @keyframes star-twinkle {
    0%, 100% { opacity: 1; transform: translateY(0) scale(1); }
    50% { opacity: 0.6; transform: translateY(-8px) scale(1.1); }
  }
</style>
